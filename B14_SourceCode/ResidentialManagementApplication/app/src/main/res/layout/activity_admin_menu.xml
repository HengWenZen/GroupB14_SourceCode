<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/condominium"
    tools:context=".AdminMenu">

    <TextView
        android:id="@+id/tvTitleAdminMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skyview Residence"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/tvTitle2AdminMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residential Management System"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleAdminMenu" />

    <TextView
        android:id="@+id/tvAdminMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN MENU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2AdminMenu"
        app:layout_constraintVertical_bias="0.091" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="307dp"
        android:layout_height="208dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminMenuTitle">

        <Button
            android:id="@+id/btnComplaintsAdminMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaints" />

        <Button
            android:id="@+id/btnFacilitiesAdminMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Booking" />

        <Button
            android:id="@+id/btnLogoffAdminMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logoff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWelcomeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminMenuTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>